{
  "name": "habitica-extension",
  "version": "1.0.0",
  "description": "The un-official browser extension for [Habitica](https://habitica.com).",
  "main": "index.js",
  "scripts": {
    "test": "karma start ./karma.config.js",
    "build": "npm run lint-js && npm run compile-js && npm run compile-css && npm run compile-html && npm run minify-js",
    "lint-js": "jshint src/js -c .jshintrc",
    "minify-js": "uglifyjs package/js/*.js --compress --mangle --output package/js/*.js",
    "compile-js": "babel src/js -d package/js",
    "compile-css": "node-sass src/scss/main.scss src/css/main.css --output-style compressed",
    "compile-html": "html-minifier --input-dir src --output-dir package --file-ext html --collapse-whitespace"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carbonsam/habitica-extension.git"
  },
  "author": "Samuel Schumacher",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/carbonsam/habitica-extension/issues"
  },
  "homepage": "https://github.com/carbonsam/habitica-extension#readme",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.5.1",
    "babel-preset-es2015": "^6.24.1",
    "html-minifier": "^3.5.2",
    "jasmine": "^2.6.0",
    "jasmine-core": "^2.6.4",
    "jshint": "^2.9.4",
    "karma": "^1.7.0",
    "karma-chrome-launcher": "^2.1.1",
    "karma-jasmine": "^1.1.0",
    "karma-spec-reporter": "0.0.31",
    "node-sass": "^4.5.3",
    "uglify-js": "^3.0.15"
  }
}
