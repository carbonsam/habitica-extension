{
  "manifest_version": 2,

  "name": "Habitica",
  "description": "This  is the un-official Habitica browser extension",
  "version": "0.1.0",

  "browser_action": {
    "default_title": "Habitica",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["js/background-bundle.js"]
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "tabs",
    "storage",
    "webNavigation",
    "https://ajax.googleapis.com/"
  ]
}
